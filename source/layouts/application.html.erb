<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>
    <%= stylesheet_link_tag "application" %>
    <script src="//use.typekit.net/pjl7tox.js"></script>
    <script>try{Typekit.load();}catch(e){}</script>
    <%= javascript_include_tag  "application" %>
  </head>

  <body class="<%= page_classes %>">
    <header class="header">
      <div class="wrapper">
        <div class="logo">
          <h1>Ambiances Bois</h1>
          <h2>Menuiserie</h2>
        </div>

        <nav class="navigation">
          <ul>
            <li><%= nav_link('Accueil', '/') %></li>
            <li><%= nav_link('Cuisines', '/cuisines') %></li>
            <li><%= nav_link('Contact', '/contact') %></li>
          </ul>
        </nav>
      </div>
    </header>

    <div class="wrapper">
      <%= yield %>
    </div>

    <footer class="footer">
      <p>&copy; 2015 Ambiances Bois</p>
    </footer>
  </body>
</html>
